@using Biz.Core.Utility
@model DateTime?

@{
    DateTime dt;
    if (Model.HasValue)
    {
        dt = (DateTime)Model;
    }
    else
    {
        dt = DateTime.Now;
    }
}

<div class="form-group@(Html.ValidationErrorFor(m => m, " error has-error"))">
    @Html.LabelFor(m => m, new { @class = "control-label" })
    <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        @Html.TextBoxFor(m => m, dt.ToShortDateString(), new
   {
       @class = "form-control datepicker",
       data_provide = "datepicker",
       data_date_language = "globalize",
       data_date = dt.ToShortDateString(),
       data_date_format = System.Threading.Thread.CurrentThread.CurrentUICulture.DateTimeFormat.ShortDatePattern.Replace("M", "m"),
       data_date_today_highlight = "true",
       data_date_today_btn = "true",
       date_date_value= dt.ToShortDateString(),
       @readonly = "",
       //value=dt.ToShortDateString(),
       @type = "date",
       @value =dt.ToShortDateString()
   })
        @Html.ValidationMessageFor(m => m, null, new { @class = "help-block" })</div>
    </div>
