@using Biz.Core.Models
@model RBVHEmployee
@{
    ViewBag.Title = "Employee Info";
    string EmployCode=QueryString("EmployeeCode");// CurrentUser.EmployeeCode.ToString();
    if (!QueryStringBool("ajax"))
    {
        Layout = LayoutPage;
    }
   
}


<div class="row">
    <div class="wrapper wrapper-content">
        <row>
            <div class="col-sm-12">
                <div class="ibox">
                    <div class="ibox-content">
                        @L("Employee"):<input type="text" />
                    </div>
                </div>
            </div>
        </row>
        <div class="row">

            <div class="col-sm-4">
                <div id="EmpInfo" target-id="EmpPosition" class="DNHDefault">
                    <div class="ibox">
                        <div class="ibox-content">
                            <div>
                                <div class="ifdcard" style="perspective: 982px; position: relative;">
                                    <div class="front" style="backface-visibility: hidden; transform-style: preserve-3d; position: absolute; z-index: 1; height: 100%; width: 100%; transition: all 0.5s ease-out 0s; transform: rotateY(0deg);">
                                        <div class="widget-head-color-box navy-bg p-lg text-center" style="backface-visibility: hidden;">
                                            <div class="m-b-md" style="backface-visibility: hidden;">
                                                <h2 class="font-bold no-margins" style="backface-visibility: hidden;">
                                                    @Model.FullName
                                                </h2>
                                            </div>
                                            <img style="width: 128px; height: 128px; backface-visibility: hidden;" data-hiddenimg="ImgUrl" class="img-circle circle-border m-b-md" id="imgPictureCustomer" src="/img/Employee/Profile/dnh.jpg">
                                            <div style="backface-visibility: hidden;">
                                                <span style="backface-visibility: hidden;"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="back" style="backface-visibility: hidden; transform-style: preserve-3d; position: relative; z-index: 0; height: 100%; width: 100%; transform: rotateY(-180deg); transition: all 0.5s ease-out 0s;">
                                        <ul class="list-group clear-list" style="backface-visibility: hidden;">
                                            <li class="list-group-item fist-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;"></span>
                                                <strong style="backface-visibility: hidden;">@L("Name")</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;"> </span>
                                                <strong style="backface-visibility: hidden;">Name</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;">  </span>
                                                <strong style="backface-visibility: hidden;">@L("Phone")</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;">  </span>
                                                <strong style="backface-visibility: hidden;">@L("DateofBirth")</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;">  </span>
                                                <strong style="backface-visibility: hidden;">@L("DepartmentID")</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;">  </span>
                                                <strong style="backface-visibility: hidden;">CuryId</strong>
                                            </li>
                                            <li class="list-group-item" style="backface-visibility: hidden;">
                                                <span class="pull-right" style="backface-visibility: hidden;"> <a link="/EPEmployee/Info?EmpCD=EMP0000000320" show-link="true" dis="mainctn" href="#" class="mybtn" style="backface-visibility: hidden;"> admin  </a></span>
                                                <strong style="backface-visibility: hidden;">@L("ReportTo")</strong>
                                            </li>

                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <div>
                                <div style="margin-top:10px;" class="row">
                                    <div class="col-sm-6">
                                        <button type="button" dis="empCtx" link="~/RBVHEmployee/Detail?EmployeeCode=@EmployCode"  data-target="#empCtx" data-toggle="tab" 
                                                    class="singInfo btn btn-warning btn-sm btn-block" target="edit" href="#Members" clink="0">
                                            <i class="fa fa-user"></i>@L("PDM")
                                        </button>
                                    </div>
                                    <div class="col-sm-6">
                                        <button data="update" data-target="#empCtx" link="/Contract/Detail?EmployeeCode=@EmployCode" dis="empCtx" class="singInfo btn btn-default btn-sm btn-block" type="button" clink="0">
                                            <i class="fa fa-envelope"></i> @L("CMS")
                                        </button>
                                    </div>
                                   
                                </div>
                                @*<div style="margin-top:10px;" class="row">
                                    <div class="col-sm-6">
                                        <button data="update" data-target="#InfoCtx" link="/PMTimeActivity/EmpTask?EmpCD=EMP0000000022" dis="InfoCtx" class="btn btn-success btn-sm btn-block mybtn" type="button" clink="0">
                                            <i class="fa fa-tasks"></i> @L("TMS") 
                                        </button>
                                    </div>
                                    <div class="col-sm-6">
                                        <button data="update" data-target="#InfoCtx" link="/EPEmployeePoint/EmpPoint?EmpCD=EMP0000000022" dis="InfoCtx" class="btn btn-primary btn-sm btn-block mybtn" type="button">
                                            <i class="fa fa-quote-right"></i>  @L("PDM") 
                                        </button>
                                    </div>
                                </div>*@
                            </div>
                            <br />
                            @*<div>
                                <button data="update" data-toggle="modal" data-target="#myModal" link="/UserInfo/ChangePasswords" dis="popcnt" class="btn btn-outline  btn-block  btn-info  dim mybtn" type="button">
                                    <i class="fa fa-quote-right"></i> ChangePassword
                                </button>
                            </div>*@

                        </div>
                    </div>
                </div>
                <div id="EmpPosition" link='@Url.Action("EmpPosition", "T_COM_Master_Employee_Position", new { EmployeeCode = @Model.EmployeeCode })' target-id="EmpTimeSheet"></div>
            </div>
            <div class="col-sm-8">
                <div id="empCtx">
                    <div id="EmpTimeSheet" link='@Url.Action("EmpTms", "ScanTime", new { EmployeeCode = @Model.EmployeeCode })'></div>
                    @*<div class="DNHtable" target_table="RBVHEmployee" PageName='ScanTime'></div>*@
                </div>
            </div>
        </div>
    </div>
</div>