@using Biz.OG.Models
@model T_COM_Master_Employee_PositionCollection
@{
    ViewBag.Title = "T_COM_Master_Employee_Position";
  
}
@using (Ajax.BeginForm("T_COM_Master_Employee_PositionEvt", "T_COM_Master_Employee_Position", 
    new AjaxOptions{
        InsertionMode = InsertionMode.Replace ,
        HttpMethod = "POST",
        UpdateTargetId ="T_COM_Master_Employee_Positionlist",
        OnBegin = "onBegin", 
        OnComplete = "onComplete",
    }, new { @class = "form-horizontal", enctype = "multipart/form-data" })){
	<div class="row">
        <div class="col-md-12">
            <div class="panel panel-success  list-panel" id="list-panel">
                <div class="panel-heading list-panel-heading" style="height:44px;">

                    <h3 class="panel-title list-panel-title">@L("T_COM_Master_Employee_Position")</h3>

                </div>

                <div class="panel-body">
					<div class="pull-right">
						<button class="btn btn-sm btn-warning filterbtn"  name="Action" value='@L("filter")' title='@L("filter")' alt='@L("filter")'><i class="fa fa-filter"></i></button>
						<a class="btn btn-success btn-sm"  href='@Url.Action("ListUpload", "T_COM_Master_Employee_Position", new { Code = "" })' dis="popcnt" target="ExcelImport" alt='@L("Import")' titile='@L("Import")'>
							<i class="fa fa-upload"></i>
							
						</a>
						<a class="btn btn-sm btn-info " href='@Url.Action("ExportExcel", "T_COM_Master_Employee_Position", new { Code = "" })'  title="ExportToExcel" id="btnExportExcel"  alt="ExportToExcel">
							<i class="fa fa-download"></i>
						</a>
					</div>
                    <button type="button" class="btn btn-sm btn-default btndtbT_COM_Master_Employee_Position" data-target="#myModal" data-toggle="modal" data="add" link='@Url.Action("Create", "T_COM_Master_Employee_Position", new { Code = "" })'  dis="popcnt">
                        <i class="fa fa-pencil"></i>
                    </button>
                    <button class="btn btn-sm btn-default" type="submit" name="Action" value="Delete"><i class="fa fa-trash"></i></button>
                    <button type="button" class="btn btn-default btn-sm refresh-button" class="refresh-btn"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>

					<div class="filter" style="display:none;">
                        <hr />
                        <div class="row">
                            <div class="col-md-6">
                                
                            </div>

                            <div class="col-md-6">
                              
                                <div class="form-group">
                                    <div class="col-md-12">
                                       
                                        <div class="col-md-2">
                                            <button class="btn btn-primary pull-right" id="btnSearch" data-url="@Url.Action("ListEmployeePoint")" data-query="EmployeCD,fromdate,todate" data-targetid="tbListEmploy">
                                                <i class="fa fa-search"></i>
                                                @L("Search")
                                            </button>
                                        </div>
                                    </div>
                                </div>
                              
                            </div>
                        </div>

                    </div>
                    <hr />
                    <div class="table-responsive">
                        <table id="dtbT_COM_Master_Employee_Position" class="table table-striped table-bordered" data-url='@Url.Action("GetGata", "T_COM_Master_Employee_Position")'
                         arr-id="T_COM_Master_Employee_Positionarr" key="ID" default-search="" allow-search="1" allow-chk="1" style="width:100%"></table>
						<input type='hidden' value="['ID','EmployeeCode','GradeID','PositionID','Salary','HomeCountrySalary','HostCountryCurrency','HomeCountryCurrency','EffectiveFrom','EffectiveTo','CreatedBy','CreatedDate','ModifiedBy','ModifiedDate','IsAcitve',]" id='T_COM_Master_Employee_Positionarr' />
                    </div>
                </div>
            </div>
        </div>
    </div>
	<script language="javascript">
        $(function () {
           TableShow("dtbT_COM_Master_Employee_Position");
        })
    </script>
}