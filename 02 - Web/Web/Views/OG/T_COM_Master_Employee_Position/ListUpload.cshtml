@{
    ViewBag.Title = "T_COM_Master_Employee_Position Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("T_COM_Master_Employee_PositionEvt", "T_COM_Master_Employee_Position",
                                        new AjaxOptions
                                        {
                                            InsertionMode = InsertionMode.Replace,
                                            HttpMethod = "POST",
                                            UpdateTargetId = "T_COM_Master_Employee_Positionlist",
                                            OnBegin = "onBegin",
                                            OnComplete = "onComplete",
                                        }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    
    <div class="ibox-title">
        <div class="panel-heading">
          
        </div>
    </div>
    <div class="ibox-content">

        <div class="m-b-lg">


            <div class="form-group">
                <label class="col-sm-2 control-label">@L("SelectFile")</label>
                <div class="col-sm-10">
                    <input type="file" id="importT_COM_Master_Employee_Positionexcelfile" targetid="#preT_COM_Master_Employee_Position" name="importT_COM_Master_Employee_Positionexcelfile" class="fileupload" style="display:none;"
                           link="/T_COM_Master_Employee_Position/ImportExcelFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                    <button class="btn btn-primary SelectFile" type="button" targetid="importT_COM_Master_Employee_Positionexcelfile">@L("SelectFile")</button>
                </div>
            </div>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary list-panel" id="list-panel">
                    <div class="panel-heading list-panel-heading" style="height:44px;">
                        <h3 class="panel-title list-panel-title">@L("T_COM_Master_Employee_Position")</h3>
                    </div>
                    <div class="panel-body">
                        <button id="btnT_COM_Master_Employee_PositionSave" type="button" class="btn btn-primary btn-sm" link="/T_COM_Master_Employee_Position/SaveExcel"><span class="fa fa-save" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-default btn-sm refresh-button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>
                        <hr />
                        <div class="table-responsive">
                            <table id="preT_COM_Master_Employee_Position" class="table table-striped table-bordered" data-url='@Url.Action("GetGata", "T_COM_Master_Employee_Position")' savebtn="btnT_COM_Master_Employee_PositionSave"
                                   arrid="T_COM_Master_Employee_Positionarr" key="ID" default-search="" allow-search="1" allow-chk="1" style="width:100%"></table>
                            <input type='hidden' value="['ID','EmployeeCode','GradeID','PositionID','Salary','HomeCountrySalary','HostCountryCurrency','HomeCountryCurrency','EffectiveFrom','EffectiveTo','CreatedBy','CreatedDate','ModifiedBy','ModifiedDate','IsAcitve',]" id='T_COM_Master_Employee_Positionarr' />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        

    </div>
    <script src="~/Scripts/model/fnIfind.js"></script>
            
}