
@{
    ViewBag.Title = "T_COM_Master_Position";
Layout = LayoutPage;
}
@using (Ajax.BeginForm("T_COM_Master_PositionEvt", "Position",
                new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "POST",
                    UpdateTargetId = "T_COM_Master_Positionlist",
                    OnBegin = "onBegin",
                    OnComplete = "onComplete",
                }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary list-panel" id="list-panel">
                <div class="panel-heading list-panel-heading" style="height:44px;">

                    <h3 class="panel-title list-panel-title">@L("T_COM_Master_Position")</h3>

                </div>

                <div class="panel-body">
                    <div class="pull-right">
                        <a class="btn btn-info" href='@Url.Action("ListUpload", "Position", new { Code = "" })' dis="popcnt" target="ExcelImport">
                            <i class="fa fa-upload"></i>
                            @L("Import")
                        </a>
                        <a href='@Url.Action("ExportExcelRange", "Position", new { Code = "" })' class="btn btn-sm btn-info" title="ExportToExcel" id="btnExportExcel">
                            <i class="fa fa-download"></i>
                        </a>
                    </div>
                    @*<button type="button" class="btn btn-sm btn-default btndtbT_COM_Master_Position" data-target="#myModal" data-toggle="modal" data="add" link='@Url.Action("Create", "Position", new { Code = "" })' dis="popcnt">
                        <i class="fa fa-pencil"></i>
                    </button>*@
                    <button class="btn btn-sm btn-default" type="submit" name="Action" value="Delete"><i class="fa fa-trash"></i></button>
                    <button type="button" class="btn btn-default btn-sm refresh-button" class="refresh-btn"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>

                    <hr />
                    <div class="table-responsive">
                        <table id="dtbT_COM_Master_Position" class="table table-striped table-bordered" data-url='@Url.Action("GetRangeGata", "Position")'
                               arr-id="T_COM_Master_Positionarr"  default-search="" allow-search="1" allow-chk="0" key="PositionID" style="width:100%"></table>
                        <input type='hidden' value="['PostionName',{'name':'MinSalary',type:'number'},{'name':'MaxSalary',type:'number'}]" id='T_COM_Master_Positionarr' />
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script language="javascript">
        $(function () {
           TableShow("dtbT_COM_Master_Position");
        })
    </script>
}