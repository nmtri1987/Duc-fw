@{
    ViewBag.Title = "T_COM_Master_Entity Import";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Ajax.BeginForm("T_COM_Master_EntityEvt", "T_COM_Master_Entity",
                                        new AjaxOptions
                                        {
                                            InsertionMode = InsertionMode.Replace,
                                            HttpMethod = "POST",
                                            UpdateTargetId = "T_COM_Master_Entitylist",
                                            OnBegin = "onBegin",
                                            OnComplete = "onComplete",
                                        }, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    
    <div class="ibox-title">
        <div class="panel-heading">
          
        </div>
    </div>
    <div class="ibox-content">

        <div class="m-b-lg">


            <div class="form-group">
                <label class="col-sm-2 control-label">@L("SelectFile")</label>
                <div class="col-sm-10">
                    <input type="file" id="importT_COM_Master_Entityexcelfile" targetid="#preT_COM_Master_Entity" name="importT_COM_Master_Entityexcelfile" class="fileupload" style="display:none;"
                           link="/T_COM_Master_Entity/ImportExcelFile" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/vnd.ms-excel" />
                    <button class="btn btn-primary SelectFile" type="button" targetid="importT_COM_Master_Entityexcelfile">@L("SelectFile")</button>
                </div>
            </div>
            <hr />
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-primary list-panel" id="list-panel">
                    <div class="panel-heading list-panel-heading" style="height:44px;">
                        <h3 class="panel-title list-panel-title">@L("T_COM_Master_Entity")</h3>
                    </div>
                    <div class="panel-body">
                        <button id="btnT_COM_Master_EntitySave" type="button" class="btn btn-primary btn-sm" link="/T_COM_Master_Entity/SaveExcel"><span class="fa fa-save" aria-hidden="true"></span></button>
                        <button type="button" class="btn btn-default btn-sm refresh-button"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></button>
                        <hr />
                        <div class="table-responsive">
                            <table id="preT_COM_Master_Entity" class="table table-striped table-bordered" data-url='@Url.Action("GetGata", "T_COM_Master_Entity")' savebtn="btnT_COM_Master_EntitySave"
                                   arrid="T_COM_Master_Entityarr" key="EntityId" default-search="" allow-search="1" allow-chk="1" style="width:100%"></table>
                            <input type='hidden' value="['EntityId','ShortName_EN','ShortName_VT','LongName_EN','LongName_VT','Description','Address_EN','Address_VT','PerDayWorkingHour','CreatedBy','CreatedDate','ModifiedBy','ModifiedDate','IsAcitve',]" id='T_COM_Master_Entityarr' />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        

    </div>
    <script src="~/Scripts/model/fnIfind.js"></script>
            
}